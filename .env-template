# Orchestrator environment template
# Copy to .env and replace placeholder values.

# Core app config
ORCHESTRATOR_CONFIG=/path/to/orchestrator/config.toml

# OpenRouter supervisor
OPENROUTER_API_KEY=<replace_with_openrouter_api_key>
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
ORCHESTRATOR_SUPERVISOR_MODEL=openai/gpt-4o-mini

# Linear integration
LINEAR_API_KEY=<replace_with_linear_api_key>
ORCHESTRATOR_LINEAR_API_URL=https://api.linear.app/graphql
ORCHESTRATOR_LINEAR_SYNC_INTERVAL_SECS=60
ORCHESTRATOR_LINEAR_FETCH_LIMIT=100
ORCHESTRATOR_LINEAR_SYNC_ASSIGNED_TO_ME=true
ORCHESTRATOR_LINEAR_SYNC_STATES=In Progress,In Review,Done
ORCHESTRATOR_LINEAR_WORKFLOW_STATE_MAP=Implementing=In Progress,Testing=In Progress,PRDrafted=In Review,AwaitingYourReview=In Review,ReadyForReview=In Review,InReview=In Review,Done=Done,Abandoned=Canceled
ORCHESTRATOR_LINEAR_WORKFLOW_COMMENT_SUMMARIES=false
ORCHESTRATOR_LINEAR_WORKFLOW_ATTACH_PR_LINKS=true

# GitHub and Git CLI integrations
ORCHESTRATOR_GH_BIN=gh
ORCHESTRATOR_GIT_BIN=git
ORCHESTRATOR_GIT_ALLOW_DELETE_UNMERGED_BRANCHES=false
ORCHESTRATOR_GIT_ALLOW_DESTRUCTIVE_AUTOMATION=false
ORCHESTRATOR_GIT_ALLOW_FORCE_PUSH=false

# Runtime safety controls shared across CLI integrations
ORCHESTRATOR_ALLOW_UNSAFE_COMMAND_PATHS=false

# OpenCode backend
ORCHESTRATOR_OPENCODE_BIN=opencode
ORCHESTRATOR_INSTRUCTION_PRELUDE=

# UI behavior
ORCHESTRATOR_TICKET_PICKER_PRIORITY_STATES=In Progress,Final Approval,Todo,Backlog

# UI golden test helper (developer/test workflow)
ORCHESTRATOR_UPDATE_GOLDENS=0

